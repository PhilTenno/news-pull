<div class="newspull-related">
    <h3>{{ headline }}</h3>
    {% if keywords is not empty %}
        <ul class="keyword-list">
        {% for keyword in keywords %}
            <li>{{ keyword.name }}</li>
        {% endfor %}
        </ul>
    {% else %}
        <p>Keine Keywords gefunden.</p>
    {% endif %}
</div>